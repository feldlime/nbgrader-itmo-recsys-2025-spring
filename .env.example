# =============================================================================
# Development Configuration
# =============================================================================
# Set to 8080 and 8443 for development
NGINX_HTTP_PORT=8080
NGINX_HTTPS_PORT=8443

# =============================================================================
# Puller Service Configuration
# =============================================================================
# GitHub personal access token with repo scope
GITHUB_TOKEN=your_github_token_here

# Directory where assignments will be pulled (inside container)
TARGET_DIR=/exchange/itmo_recsys_2025_spring/inbound

# Path to the repositories CSV file
STUDENTS_TSV_PATH=/exchange/itmo_recsys_2025_spring/students.tsv

# Use domain/IP of current server
JUPYTER_URL=http://localhost:8080/jupyter/

# =============================================================================
# OAuth2 Proxy Configuration
# =============================================================================
# Cookie secret (32 bytes, base64 encoded)
# Generate with: openssl rand -base64 32
OAUTH2_PROXY_COOKIE_SECRET=some-secret-string

# GitHub OAuth App credentials
OAUTH2_PROXY_CLIENT_ID=your-github-client-id
OAUTH2_PROXY_CLIENT_SECRET=your-github-client-secret

# Authorized GitHub usernames (comma-separated)
OAUTH2_PROXY_GITHUB_USERS=feldlime1,feldlime2

